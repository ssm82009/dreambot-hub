
# Enable the RewriteEngine
RewriteEngine On

# If the request is not for a file that actually exists
RewriteCond %{REQUEST_FILENAME} !-f

# If the request is not for a directory that actually exists
RewriteCond %{REQUEST_FILENAME} !-d

# Then send everything to index.html
RewriteRule ^ index.html [QSA,L]

# تحسينات الأداء
<IfModule mod_expires.c>
  ExpiresActive On

  # الصور
  ExpiresByType image/jpeg "access plus 1 year"
  ExpiresByType image/png "access plus 1 year"
  ExpiresByType image/gif "access plus 1 year"
  ExpiresByType image/svg+xml "access plus 1 year"
  ExpiresByType image/webp "access plus 1 year"

  # الخطوط
  ExpiresByType font/woff "access plus 1 year"
  ExpiresByType font/woff2 "access plus 1 year"
  ExpiresByType application/font-woff "access plus 1 year"
  ExpiresByType application/font-woff2 "access plus 1 year"

  # CSS و JavaScript
  ExpiresByType text/css "access plus 1 month"
  ExpiresByType text/javascript "access plus 1 month"
  ExpiresByType application/javascript "access plus 1 month"
</IfModule>

# تحسين ضغط الملفات
<IfModule mod_deflate.c>
  AddOutputFilterByType DEFLATE text/plain
  AddOutputFilterByType DEFLATE text/html
  AddOutputFilterByType DEFLATE text/css
  AddOutputFilterByType DEFLATE text/javascript
  AddOutputFilterByType DEFLATE application/javascript
  AddOutputFilterByType DEFLATE application/json
  AddOutputFilterByType DEFLATE image/svg+xml
  AddOutputFilterByType DEFLATE font/woff
  AddOutputFilterByType DEFLATE font/woff2
</IfModule>

# تعيين أنواع MIME الصحيحة للملفات JavaScript
<IfModule mod_mime.c>
  # تعيين نوع MIME لملفات JavaScript
  AddType application/javascript .js
  # تعيين نوع MIME لوحدات JavaScript
  AddType application/javascript .mjs
  # تعيين نوع MIME لملفات TypeScript
  AddType application/javascript .ts .tsx
  # تعيين نوع MIME لملفات JSON
  AddType application/json .json
</IfModule>

# ضمان تقديم ملفات JavaScript كوحدات ES
<IfModule mod_headers.c>
  <FilesMatch "\.(js|mjs|ts|tsx)$">
    Header set Content-Type "application/javascript; charset=utf-8"
  </FilesMatch>
  <FilesMatch "\.json$">
    Header set Content-Type "application/json; charset=utf-8"
  </FilesMatch>
</IfModule>
